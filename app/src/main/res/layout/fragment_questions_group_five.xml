<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.QuestionsGroupFiveFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/test_page_five_question_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/test_page_five_choices_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_five_question_one"
                >
                <RadioButton
                    android:id="@+id/test_page_five_choices_one_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You feel overreacting."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_five_choices_one_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You feel like you deserve it."
                    android:textColor="@color/black"/>

            </RadioGroup>


            <TextView
                android:id="@+id/test_page_five_question_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_five_choices_one"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_five_answer_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_five_question_two"/>

            <TextView
                android:id="@+id/test_page_five_question_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_five_answer_two"/>

            <RadioGroup
                android:id="@+id/test_page_five_choices_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_five_question_three"
                >
                <RadioButton
                    android:id="@+id/test_page_five_choices_three_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter a new relationship and move on."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_five_choices_three_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You get memories back and try to get back to the same person."
                    android:textColor="@color/black"/>
            </RadioGroup>



            <TextView
                android:id="@+id/test_page_five_question_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_five_choices_three"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_five_answer_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_five_question_four"/>

            <TextView
                android:id="@+id/test_page_five_question_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_five_answer_four"/>

            <RadioGroup
                android:id="@+id/test_page_five_choices_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_five_question_five"
                >
                <RadioButton
                    android:id="@+id/test_page_five_choices_five_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You think about everything around you."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_five_choices_five_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You only care about the most important things."
                    android:textColor="@color/black"/>
            </RadioGroup>


        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/test_page_five_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        />

</RelativeLayout>