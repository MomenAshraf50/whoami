<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.QuestionsGroupFourFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">

            <TextView
                android:id="@+id/test_page_four_question_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/test_page_four_choices_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_four_question_one"
                >
                <RadioButton
                    android:id="@+id/test_page_four_choices_one_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You meet his request first, and then you keep working."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_four_choices_one_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You finish your job first, then you meet his request."
                    android:textColor="@color/black"/>

            </RadioGroup>


            <TextView
                android:id="@+id/test_page_four_question_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_four_choices_one"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_four_answer_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_four_question_two"/>

            <TextView
                android:id="@+id/test_page_four_question_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_four_answer_two"/>

            <RadioGroup
                android:id="@+id/test_page_four_choices_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_four_question_three"
                >
                <RadioButton
                    android:id="@+id/test_page_four_choices_three_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You feel remorse and guilt."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_four_choices_three_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You don't regret for what you did."
                    android:textColor="@color/black"/>
            </RadioGroup>





            <TextView
                android:id="@+id/test_page_four_question_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_four_choices_three"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_four_answer_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_four_question_four"/>

            <TextView
                android:id="@+id/test_page_four_question_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_four_answer_four"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_four_answer_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_four_question_five"/>




        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/test_page_four_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        />

</RelativeLayout>