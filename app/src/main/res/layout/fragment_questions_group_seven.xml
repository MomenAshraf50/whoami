<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.QuestionsGroupSevenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/test_page_seven_question_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_seven_answer_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_seven_question_one"/>

            <TextView
                android:id="@+id/test_page_seven_question_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_seven_answer_one"/>

            <RadioGroup
                android:id="@+id/test_page_seven_choices_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_seven_question_two"
                >
                <RadioButton
                    android:id="@+id/test_page_seven_choices_two_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes, it's got problems and it's unstable."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_seven_choices_two_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No, it's stable."
                    android:textColor="@color/black"/>

            </RadioGroup>



            <TextView
                android:id="@+id/test_page_seven_question_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_seven_choices_two"/>

            <RadioGroup
                android:id="@+id/test_page_seven_choices_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@id/test_page_seven_question_three"
                >
                <RadioButton
                    android:id="@+id/test_page_seven_choices_three_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You feel like you deserve more success and a better life."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_seven_choices_three_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You feel good about yourself and settle for your life."
                    android:textColor="@color/black"/>
            </RadioGroup>




            <TextView
                android:id="@+id/test_page_seven_question_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_seven_choices_three"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_page_seven_answer_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/answer"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/test_page_seven_question_four"/>


            <TextView
                android:id="@+id/test_page_seven_question_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/test_page_seven_answer_four"/>

            <RadioGroup
                android:id="@+id/test_page_seven_choices_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@+id/test_page_seven_question_five"
                >
                <RadioButton
                    android:id="@+id/test_page_seven_choices_five_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A few people."
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/test_page_seven_choices_five_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A lot of people."
                    android:textColor="@color/black"/>
            </RadioGroup>


        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/test_page_seven_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        />


</RelativeLayout>