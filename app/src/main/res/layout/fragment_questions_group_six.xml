<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.QuestionsGroupSixFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="6"
        android:max="8"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:id="@+id/test_progress_bar"
        />
    <ScrollView
        android:layout_below="@id/test_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardPreventCornerOverlap="false"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/test_page_six_question_one_card_view">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/test_page_six_question_id_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="26."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:id="@+id/test_page_six_question_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/test_page_six_question_id_one"/>
                    <RadioGroup
                        android:id="@+id/test_page_six_choices_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_below="@id/test_page_six_question_one"
                        >
                        <RadioButton
                            android:id="@+id/test_page_six_choices_one_ans_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yes, you follow the standards and rules."
                            android:textColor="@color/black"/>
                        <RadioButton
                            android:id="@+id/test_page_six_choices_one_ans_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No, you donâ€™t pay attention to them in the first place."
                            android:textColor="@color/black"/>

                    </RadioGroup>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/test_page_six_question_two_card_view"
                android:layout_below="@+id/test_page_six_question_one_card_view">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/test_page_six_question_id_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="27."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:id="@+id/test_page_six_question_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/test_page_six_question_id_two"
                        />
                    <RadioGroup
                        android:id="@+id/test_page_six_choices_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_below="@id/test_page_six_question_two"
                        >
                        <RadioButton
                            android:id="@+id/test_page_six_choices_two_ans_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your reaction will be emotional and physical."
                            android:textColor="@color/black"/>
                        <RadioButton
                            android:id="@+id/test_page_six_choices_two_ans_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your reaction will be to ignore."
                            android:textColor="@color/black"/>

                    </RadioGroup>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/test_page_six_question_three_card_view"
                android:layout_below="@id/test_page_six_question_two_card_view">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/test_page_six_question_id_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="28."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:id="@+id/test_page_six_question_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@id/test_page_six_question_id_three"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <RadioGroup
                        android:id="@+id/test_page_six_choices_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_below="@id/test_page_six_question_three"

                        >
                        <RadioButton
                            android:id="@+id/test_page_six_choices_three_ans_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yes, it is difficult for you to express your feelings."
                            android:textColor="@color/black"/>
                        <RadioButton
                            android:id="@+id/test_page_six_choices_three_ans_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No, it is easy."
                            android:textColor="@color/black"/>

                    </RadioGroup>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/test_page_six_question_four_card_view"
                android:layout_below="@id/test_page_six_question_three_card_view">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/test_page_six_question_id_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="29."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:id="@+id/test_page_six_question_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/test_page_six_question_id_four"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <RadioGroup
                        android:id="@+id/test_page_six_choices_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_below="@id/test_page_six_question_four"
                        >
                        <RadioButton
                            android:id="@+id/test_page_six_choices_four_ans_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You will talk after a deep thought."
                            android:textColor="@color/black"/>
                        <RadioButton
                            android:id="@+id/test_page_six_choices_four_ans_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You rush to talk without thinking."
                            android:textColor="@color/black"/>

                    </RadioGroup>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"                android:id="@+id/test_page_six_question_five_card_view"
                android:layout_below="@id/test_page_six_question_four_card_view">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/test_page_six_question_id_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="30."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:id="@+id/test_page_six_question_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/test_page_six_question_id_five"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <RadioGroup
                        android:id="@+id/test_page_six_choices_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_below="@id/test_page_six_question_five"
                        >
                        <RadioButton
                            android:id="@+id/test_page_six_choices_five_ans_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You make reckless and quick decisions."
                            android:textColor="@color/black"/>
                        <RadioButton
                            android:id="@+id/test_page_six_choices_five_ans_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A lot of thinking before making decisions."
                            android:textColor="@color/black"/>

                    </RadioGroup>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/test_page_six_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        />

</RelativeLayout>