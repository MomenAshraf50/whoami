<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResultActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:elevation="@dimen/_15sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/result_view_pager"
                android:layout_above="@+id/result_dots_indicator"/>
            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/result_dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_50sdp"
                app:dotsColor="@color/textColor"
                app:dotsCornerRadius="@dimen/_6sdp"
                app:dotsSize="@dimen/_12sdp"
                app:dotsSpacing="@dimen/_2sdp"
                app:dotsWidthFactor="2.5"
                app:selectedDotColor="@color/design_default_color_primary"
                app:progressMode="false"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>